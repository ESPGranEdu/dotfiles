{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "python",
    "vim",
    "html",
    "javascript",
    "yaml",
    "json",
    "shellscript",
    "yml"
  ],
  // python configuration
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  // Language Servers configuration
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }
}
